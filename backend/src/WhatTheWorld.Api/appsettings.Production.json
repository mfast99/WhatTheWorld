{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "WhatTheWorld": "Information"
    }
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      },
      {
        "Endpoint": "*:/weather",
        "Period": "1h",
        "Limit": 50
      },
      {
        "Endpoint": "*:/news",
        "Period": "1h",
        "Limit": 25
      }
    ]
  },
  "ExternalApis": {
    "WeatherApiBaseUrl": "https://api.weatherapi.com/v1/current.json",
    "PerplexityBaseUrl": "https://api.perplexity.ai/chat/completions"
  }
}
